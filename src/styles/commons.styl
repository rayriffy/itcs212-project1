getBackground(theme = 'light')
  if theme == 'light'
    background-color #ecf0f3
  else if theme == 'dark'
    background-color #2f3338

getShadow(size, colorSet, isInset = false)
  if isInset
    box-shadow inset (size / 10)px (size / 10)px (size / 5)px colorSet[0], inset (size / 10 * -1)px (size / 10 * -1)px (size / 5)px colorSet[1]
  else
    box-shadow (size / 10)px (size / 10)px (size / 5)px colorSet[0], (size / 10 * -1)px (size / 10 * -1)px (size / 5)px colorSet[1]

getCard(theme = 'light', shape = 'flat', size = 300, borderRadius = 50px)
  border-radius borderRadius
  if theme == 'light'
    getShadow(size, #c9cccf #ffffff, shape == 'pressed')
    if shape == 'flat'
      background #ecf0f3
    else if shape == 'concave'
      background linear-gradient(145deg, #d4d8db, #fdffff)
    else if shape == 'convex'
      background linear-gradient(145deg, #fdffff, #d4d8db)
    else if shape == 'pressed'
      background #ecf0f3
  else if theme == 'dark'
    getShadow(size, #282b30 #363b40, shape == 'pressed')
    if shape == 'flat'
      background #2f3338
    else if shape == 'concave'
      background linear-gradient(145deg, #32373c, #2a2e32)
    else if shape == 'convex'
      background linear-gradient(145deg, #2a2e32, #32373c)
    else if shape == 'pressed'
      background #2f3338

getFont(style = 'body', theme = 'light')
  font-family 'Google Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  if style == 'heading'
    line-height 1.25
    font-weight bold
  if theme == 'dark'
    color rgba(255, 255, 255, 0.92)
  else
    color #1a202c

getShadow(weight)
  if weight == 'xs'
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.05)
  else if weight == 'sm'
    box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.05)
  else if weight == 'md'
    box-shadow 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)
  else if weight == 'lg'
    box-shadow 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)
  else if weight == 'xl'
    box-shadow 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)
  else if weight == '2xl'
    box-shadow 0 25px 50px -12px rgba(0, 0, 0, 0.25)
  else
    box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)
  

