@import './commons'

html
  height 100%

body
  getFont(theme: theme)
  getBackground(theme)
  height 100%
  margin 0

h1, h2, h3, h4, h5, h6
  margin 0

a
  getColor(theme, color)
  text-decoration none
  
nav
  border-bottom 1px solid blue

body > .flex
  display flex
  justify-content center
  padding 40px 20px

.container
  width 60%
  @media screen and (max-width: 700px)
    width 80%
  @media screen and (max-width: 480px)
    width 100%

.container > .nav
  display flex
  align-items center
  font-size 20px
  & > h1
    padding 0 15px 0 0
  @media screen and (max-width: 520px)
    display block
    & > h1
      padding 0 0 15px calc(0.5rem + 10px)
  & > .spacer
    margin 0 auto
  & > .links
    display flex
    flex-wrap wrap
    & > .button
      padding 0.25rem 0.5rem
      & > a
        font-weight 500
        font-size 16px
        padding 5px 10px
        transition all 0.2s cubic-bezier(0.23, 1, 0.32, 1)
        text-transform uppercase
        border-radius 999px
        getColor(theme, color)
        &:hover
          getColor(theme, background)
          getColor(theme, color, true)
    & > .active > a
      transition all 0.2s cubic-bezier(0.23, 1, 0.32, 1)
      getColor(theme, color, true)
      getColor(theme, background)
      &:hover
        background transparent
        getColor(theme, color)


.container > .content
  padding 20px 0 calc(20px + 60px) 0

.footer
  position fixed
  bottom 0
  left 0
  right 0
  display flex
  justify-content center
  & > .box
    height 60px
    border-radius 20px 20px 0 0
    getColor(theme, background)
    getColor(theme, color, true)
    font-size 14px
    display flex
    justify-content center
    align-items center
    width 60%
    @media screen and (max-width: 700px)
      width 80%
    @media screen and (max-width: 480px)
      width 100%