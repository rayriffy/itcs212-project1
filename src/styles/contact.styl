@import './commons'

.content
  & > .flex
    display flex
    justify-content center
    padding 20px 0 0 0
    & > h1
      text-align center
      border-bottom 5px solid
      getColor(theme, border-color)
  & > .form
    padding-top 20px
    display flex
    flex-wrap wrap
    & > .half
      width calc(50% - 20px)
    & > .full
      width calc(100% - 20px)
    & > *
      padding 10px
      & > label
        font-size 14px
        margin-bottom 4px
        display block
        & > .required
          color #ff0000
      & > input, textarea
        width 100%
        height 40px
        padding 10px 15px
        box-sizing border-box
        font-size 16px
        line-height 22px
        getColor(theme, color)
        background-color #f5f8fa
        border 1px solid #cbd6e2
        border-radius 4px
      & > textarea
        min-height 100px
  & > span
    getFont('heading', theme)
    padding 0 10px
  & > .eula
    padding 5px 10px
    margin 0
  & > .submit
    padding 10px
